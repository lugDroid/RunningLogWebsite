@model  Athlete

@{
    ViewData["Title"] = "Athlete Data";
}

    <div class="panel panel-default">
        <h4 class="panel-heading display-4 text-info">@ViewData["Title"]</h4>

        <div class="card" style="width: 30rem">
            <ul class="list-group-flush">
                <li class="list-group-item">Username: @Model.Username</li>
                <li class="list-group-item">First Name: @Model.FirstName</li>
                <li class="list-group-item">Last Name: @Model.LastName</li>
                <li class="list-group-item">City: @Model.City</li>
                <li class="list-group-item">State: @Model.State</li>
                <li class="list-group-item">Country: @Model.Country</li>
                <li class="list-group-item">Created At: @Model.CreatedAt</li>
                <li class="list-group-item">Updated At: @Model.UpdatedAt</li>
            </ul>
        </div>

        <hr/>

        <h4 class="panel-heading display-4 text-info">Run Totals</h4>

        <table class="table table-hover">
            <thead class="font-weight-bold">
                <tr>
                    <th></th>
                    <th>Activities</th>
                    <th>Distance (km)</th>
                    <th>Moving Time</th>
                    <th>Elapsed Time</th>
                    <th>Elevation Gain (m)</th>
                </tr>
            </thead>

            <tr>
                <th>Recent</th>
                <td>@Model.RecentRunTotals.Count</td>
                <td>@((Model.RecentRunTotals.Distance / 1000).ToString("F2"))</td>
                <td>@Model.RecentRunTotals.MovingTime</td>
                <td>@Model.RecentRunTotals.ElapsedTime</td>
                <td>@Model.RecentRunTotals.ElevationGain.ToString("F1")</td>
            </tr>

            <tr>
                <th>Year to Date</th>
                <td>@Model.YearToDateRunTotals.Count</td>
                <td>@((Model.YearToDateRunTotals.Distance / 1000).ToString("F2"))</td>
                <td>@Model.YearToDateRunTotals.MovingTime</td>
                <td>@Model.YearToDateRunTotals.ElapsedTime</td>
                <td>@Model.YearToDateRunTotals.ElevationGain.ToString("F1")</td>
            </tr>

            <tr>
                <th>All time</th>
                <td>@Model.AllRunTotals.Count</td>
                <td>@((Model.AllRunTotals.Distance / 1000).ToString("F2"))</td>
                <td>@Model.AllRunTotals.MovingTime</td>
                <td>@Model.AllRunTotals.ElapsedTime</td>
                <td>@Model.AllRunTotals.ElevationGain.ToString("F1")</td>
            </tr>
        </table>

    </div> 
